{
	"manifest_version": 2,
	"name": "Chrome User Agent Spoofer",
	"description": "Spoofs user agent to a specified one based upon user entered domains",
	"version": "0.1",
	"browser_action": {
		"default_icon": {
			"38": "images/agentoff_38.png"
		},
		"default_title": "User Agent Spoofer",
		"default_popup": "overview.html"
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"tabs",
		"<all_urls>"
	],
	"background": {
		"scripts": [
			"switchuseragent.js"
		],
		"persistent": true
	}
}